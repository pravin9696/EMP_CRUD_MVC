@model EMP_CRUD_MVC.Models.tblDept
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Department Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <div class="container mt-5">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Department</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
            {

                        <div class="mb-3">

                            @Html.LabelFor(x => x.DeptName, new { @class="form-label"})
                            @Html.TextBoxFor(x => x.DeptName, new { @class = "form-control", placeholder="Enter Department Name ", @required ="required"})
                            
                        </div>
                       
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2">Add</button>
                            <button type="reset" class="btn btn-secondary">Cancel</button>
                        </div> 
                        }


                    <h3>@ViewBag.msg</h3>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
