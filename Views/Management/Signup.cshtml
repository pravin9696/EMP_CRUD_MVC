@model EMP_CRUD_MVC.Models.EmpDetailsWithLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Signup Page</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <h3 style="color:red">@ViewBag.msg</h3>
    <div class="login-container">
        <h3 class="text-center mb-4">Login</h3>
        @using (Html.BeginForm())
        {

            <div class="mb-3">

                @Html.LabelFor(x => x.empDetail.Name, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.empDetail.Name, new { @class = "form-control", placeholder = "Enter Name", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.empDetail.Address, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.empDetail.Address, new { @class = "form-control", placeholder = "Enter Address", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.empDetail.Contact, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.empDetail.Contact, new { @class = "form-control", placeholder = "Enter Contact", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.empDetail.DeptID, new { @class = "form-label" })

                @Html.DropDownListFor(x => x.empDetail.DeptID, new SelectList(@ViewBag.DeptList, "ID", "DeptName"), new { @class = "form-control", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.empDetail.Salary, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.empDetail.Salary, new { @class = "form-control", placeholder = "Enter Salary", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.login.UserName, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.login.UserName, new { @class = "form-control", placeholder = "Enter username", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.login.Password, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.login.Password, new { @class = "form-control", placeholder = "Enter Password", @required = "required" })

            </div>
            <div class="mb-3">

                @Html.LabelFor(x => x.ConfirmPassword, new { @class = "form-label" })

                @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "ReEnter Password ", @required = "required" })

            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="d-grid">
                @Html.ActionLink("Login", "Login", "Management")
            </div>
        }
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
